@using WebEnterprise_1640.Models
@{
	ViewData["Title"] = "User Profile";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/CMP26.css">
<div class="container mt-5">
	<div class="main-body">
		<div class="row h-50">
			<div class="col-lg-3 h-100">
				<div class="profile card h-100">
					<div class="card-body">
						<div class="d-flex flex-column align-items-center text-center">
							<img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin" class="rounded-circle p-1 bg-primary mt-5" width="110">
							<div class="mt-3">
								<h4>@Model.FullName</h4>
								<p class="text-secondary mb-1">@Model.Faculty.Name</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-8 h-100">
				<div class="card h-100">
					<div class="card-body" style="max-width: 800px;">
						<div class="col-sm-6">
							<h6>Account information</h6>
						</div>
						<div class="row mb-3 mt-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Full Name</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input type="text" class="form-control" value="@Model.FullName">
							</div>
						</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Email</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="@Model.Email">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Phone</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="@Model.PhoneNumber">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Address</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="@Model.Address">
								</div>
							</div>
							<div class="row">
								<div class="col-sm-3"></div>
								<div class="col-sm-9 text-secondary">
									<input type="button" class="btn btn-primary px-4" value="Save Changes">
								    <input type="button" class="btn btn-primary px-4" value="Cancle">
								</div>
							</div>
						</div>
					</div>
				<div class="row mt-3 pb-5">
						<div class="col-sm-12">
							<div class="card">
								<div class="card-body ">
									<h5 class="d-flex align-items-center mb-3">Change Password</h5>
								<h6><p>Current Password</p></h6>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="..............">
								</div>
								<div style="margin-bottom: 10px;"></div>
								<h6><p>New Password</p></h6>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="..............">
								</div>
								<div style="margin-bottom: 10px;"></div>
								<h6><p>Confirm Password</p></h6>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" value="..............">
								</div>
								</div>
							<div class="row pb-2">
								<div class="col-sm-3"></div>
								<div class="col-sm-9 text-secondary">
									<input type="button" class="btn btn-primary px-4" value="Save Changes">
									<input type="button" class="btn btn-primary px-4" value="Cancle">
								</div>
							</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

