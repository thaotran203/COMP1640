@using WebEnterprise_1640.Models
@model WebEnterprise_1640.Models.ArticleModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/nav_footer.css">
    <link rel="stylesheet" href="~/css/guest_article.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Article</title>
</head>

<body>
    @{
        var userData = ViewBag.User;
        UserModel? user = null;
        if(userData != null)
        {
            user = (UserModel)userData;
        }
    }
    <header>
        <div class="nav-bar">
            <div class="nav-1">
                <p>BEE MAGAZINE
                <p>
            </div>
            <div class="home an" id="home">
                <div class="home-cover">
                    <a href="/Home/Index" class="home-button" style="text-decoration: none; border-color: white">Home</a>
                    <a href="/Uploads/Index" class="home-button" style="text-decoration: none; margin-left:2rem; border-color: white;">Uploads</a>
                </div>
            </div>
            @if (user != null)
            {
                <div class="button an" id="login">
                    <a href="@Url.ActionLink("Logout", "Account")" class="login-button" style="text-decoration: none">Log out</a>
                </div>
            }
            else
            {
                <div class="button an" id="login">
                    <a href="/Account/Login" class="login-button">Log in</a>
                </div>
            }
            <div onclick="showmenu()" class="icon-menu">
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>
        <div class="show-menu none">
        </div>
    </header>

    <div class="major-container">
        <div class="magazine">
            @Model.Magazine.Name
        </div>
        <p>></p>
        <div class="magazine-field">
            @Model.Magazine.Faculty.Name
        </div>
    </div>
    <div class="topic-magazine">
        @Model.Name
    </div>
    <div class="img-magazine">
        <div class="img">
            @if(Model.Documents != null && Model.Documents.Count > 0)
            {
                if (Model.Documents[0].Image != null && Model.Documents[0].Image.Length > 0)
                {
                    <img src="~/media/@Model.Documents[0].Image" alt="">
                } else
                {
                    <img src="https://www.ciobulletin.com/assets/home_image/ciobulletin-the-top-10-business-magazines-in-the-world-you-need-to-read-1.webp"
                         alt="">
                }
            } else
            {
                <img src="https://www.ciobulletin.com/assets/home_image/ciobulletin-the-top-10-business-magazines-in-the-world-you-need-to-read-1.webp"
                     alt="">
            }
        </div>
    </div>
    <div class="file">
        <div class="title">
            Description
        </div>
        <p>
            @Model.Description
        </p>

    @if (Model.Documents != null && Model.Documents.Count > 0)
    {
            if (Model.Documents[0] != null && Model.Documents[0].File != null && Model.Documents[0].File.Length > 0)
            {
                <div style="display: flex; justify-content: center">
                    <embed src="~/media/@Model.Documents[0].File" type="application/pdf" width="100%" height="1000px" />
                </div>
            } else
            {
                if (Model.Documents.Count > 1 && Model.Documents[1] != null && Model.Documents[1].File != null && Model.Documents[1].File.Length > 0)
                {
                    <div style="display: flex; justify-content: center">
                        <embed src="~/media/@Model.Documents[1].File" type="application/pdf" width="70%" height="1000px" />
                    </div>
                }
            }
    }
        <hr>
    </div>
    
    <footer>
        <div class="colum">
            <div class="colum-1">
                <h2>COMP1640</h2>
            </div>
            <div class="colum-2">
                <h3>About us</h3>
                <div class="contact">
                    <p>Popular</p>
                    <p>Trending</p>
                    <p>Contact</p>
                    <p>Support/Help</p>
                    <p>Request Topics</p>
                </div>
            </div>
            <div class="colum-3">
                <h3>Follow us</h3>
                <div class="social">
                    <div class="facebook">
                        <div class="icon">
                            <i class="fa-brands fa-facebook-f"></i>
                        </div>
                        <p>Facebook</p>
                    </div>
                    <div class="facebook">
                        <div class="icon">
                            <i class="fa-brands fa-instagram"></i>
                        </div>
                        <p>Instagram</p>
                    </div>
                    <div class="facebook">
                        <div class="icon">
                            <i class="fa-brands fa-twitter"></i>
                        </div>
                        <p>Twitter</p>
                    </div>
                    <div class="facebook">
                        <div class="icon">
                            <i class="fa-brands fa-linkedin"></i>
                        </div>
                        <p>LinkedIn</p>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="copy-right">
            <div class="year">
                2024 COMP1640. All right reserved.
            </div>
            <div class="policy">
                <u>Privacy Policy</u>
                <u>Term of Service</u>
                <u>Cookies Settings</u>
            </div>
        </div>
    </footer>
    <script src="~/js/guest_view.js"></script>
</body>

</html>